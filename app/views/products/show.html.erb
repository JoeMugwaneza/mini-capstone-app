
<h1>Product</h1>
<h2> <%= @product.name %></h2>
<h2>Price:<%= @product.price %></h2>
<h2><%= @product.description %></h2>

<% @product.categories.each do |category| %>
  <li> <%=category.name %></li>
<% end %>


<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 200px; height:150px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <img src="<%= @product.images[0].url %>" alt="Chania">
    </div>


    <% @product.images.each do |image| %> 
    <div class="item">
      <img src="<%= image.url %>">
    </div>
    <% end %>
  </div>
  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



	
<h2>Supplier:<%= @product.supplier.name %></h2>


    <%= form_tag "/carted_products", method: :post do %>
      <div>
        Quantity: <input type="text" name="quantity">
      </div>
      <div>
        <input type="hidden" name="product_id" value="<%= @product.id %>">
      </div>
      <div>    
        <input type="submit" value="Add to cart!">
      </div>
    <% end %>

<a class="btn btn-default" href="/products/<%= @product.id %>/edit" role="button">Edit</a>
<%= button_to "delete", "/products/#{@product.id}", method: :delete%>
<%= button_to "Add New Image", "/images/new", class: "btn btn-primary", method: :get %>

    
  
      
  
  