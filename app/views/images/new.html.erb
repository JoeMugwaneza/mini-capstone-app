<h1>Add Image to the Product</h1>

<div class="container">
 <%= form_tag "/images", method: :post do %>
     <div class="row">
        <div class="col-md-9">
          <label for="products name">Image Url</label>
          <input type="text"  class="form-control" name="url">
        </div>
     </div>

     <div>
      <select name="product_id">
          <option value="volvo">Select a product</option>
        <% @products.each do |product| %>
          <option value="<%= @product_id %>"><%= product.name %></option>
        <% end %>
      </select> 
     </div>

   <button type="submit" class="btn btn-default">Submit</button>
 <% end %>
</div>